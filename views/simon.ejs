<html>
<head>
<title>SiMoN</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link id="css" rel="stylesheet" type="text/css" href="simon.css">
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
</head>
<body>

<div id="simon">

 <div id="img">
      <center><a href="/calculator"><img id="logo" src="simon_logo.jpg" alt="sImOn"></a></center>
 </div>

<div class="popup">
  <span class="popuptext" id="myPopup"><p>Game Over :(</p>
  Save Score & Retry!
  <div id="score"></div>
    <form action="/score" method="POST">
        <input type="text" name="name" id="name" placeholder="Enter Name">
        <input type="hidden" name="score" id="myScore" value="">
        <button type="submit">Submit</button>
        <p id="computer1">-</p>
        <p id="player1">-</p>
    </form>
</span>
</div>

  <div id="head">
    <div id="status">
      <div id="staticText"><b>Score:</b></div>
      <div id="round">--</div>
      <div id="display">Press Start :)</div>
    </div>
</div>

<div id="buttons">
      <button id="start">START</button>
      <button id="reset"><em>RESET</em></button>
</div>

    <div id="container">
      <div class="box green">G</div>
      <div class="box red">R</div>
      <div class="box yellow">Y</div>
      <div class="box blue">B</div>
    </div>
</div>

  <footer id="footer">
    Coded & Designed by
    <a href="https://www.linkedin.com/in/arandazzo" target="_blank">
        Tony Randazzo</a>
  </footer>


<h1><em>High Scores</em></h1>

<table class="score">
   <thread>
    	<tr>
    	  <th>Name</th>
    	  <th>Score</th>
    	  <th>Date</th>
    	</tr>
   </thread>
   <tbody>
      <% for(var i=0; i < score.length; i++) { %>
         <tr>
           <td><%= score[i].name %></td>
           <td><center><%= score[i].score %></center></td>
           <td><%= score[i].time %></td>
         </tr>
      <% } %>
   </tbody>
</table>
<br>

<div id="gameStats" margin="10px">
      <hr>
      <h1>Game Stats!</h1>
  <!-- responsive DIVs: https://codepen.io/anon/pen/wePWva -->
      <center>
        <div id="computer">---</div>
        <div id="player">---</div>
        <div id="compare">---</div>
        <button id="dev">popUp</button>
    </center>
<br>
</div>

<script src="simon.js"></script>
</body>
</html>

